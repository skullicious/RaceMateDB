@model IPagedList<RiderModel>


<div id="riderList">



    <div class="pagedList" data-rmdb-target="#riderList">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
       PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions()
    { HttpMethod = "GET", UpdateTargetId = "riderList"}))                                @*   PagedListRenderOptions.MinimalWithItemCountText) *@



    </div>


     

      

    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
            </th>

            <th></th>
        </tr>







        @foreach (var item in Model)
        {
            <tr>

                <td> 
                    <div class="ResultHighlightRibbon">
                        @Html.DisplayFor(modelItem => item.Name)
                    </div>
                </td>


                <td>
                    <div class="ResultHighlightRibbon">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                        @Html.ActionLink("View Riders Events", "ViewRiderEvents", new { id = item.Id })
                    </div>
                </td>
            </tr>
        }


    </table>

    </div>