@model IPagedList<RiderModel>


<div id="riderList">

    <div class="pagedList" data-rmdb-target="#riderList">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
          PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions()
       { HttpMethod = "GET", UpdateTargetId = "riderList"}))                                @*   PagedListRenderOptions.MinimalWithItemCountText) *@
</div>


<table class="table">
    <tr>
        <th>
            Rider
            @*@Html.DisplayNameFor(model => model.FirstOrDefault().Name)*@
        </th>

        <th>
            Club or Team
        </th>
    </tr>


    @if (@User.IsInRole("Admin"))
    {
        <text>|</text>@Html.ActionLink("Create New", "Create") <text>|</text>
    }


    @foreach (var item in Model)
    {



        <tr>
            <td>
                <div class="ResultHighlightRibbon">
                    @Html.DisplayFor(modelItem => item.Name)
                </div>
            </td>

            <td>
                <div class="ResultHighlightRibbon">
                    @Html.DisplayFor(modelItem => item.ClubOrTeam.Name)
                </div>
            </td>

            <td>
                <div class="ResultHighlightRibbon">
                    | @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("View Riders Results", "ViewRiderEvents", new { id = item.Id }) |

                    @if (@User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <text>|</text>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }) <text>|</text>
                    }
                </div>
            </td>
        </tr>
    }

</table>




</div>




          